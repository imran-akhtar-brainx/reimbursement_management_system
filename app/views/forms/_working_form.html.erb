<div class="container mt-5">
  <%= form_with url: submissions_path, method: :post do |form| %>
    <div class="row">
      <div class="col-4">
        <h1>logo</h1>
      </div>
      <div class="col-8">
        <h1>EMPLOYEE WORKING HOLIDAYS FORM</h1>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-3">
        <span>Employee Name :</span>
      </div>
      <div class="col-9">
        <span><%= current_user.name %></span>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-3">
        <span>Employee ID :</span>
      </div>
      <div class="col-9">
        <span><%= current_user.emp_id %></span>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-6">
        <div class="row">
          <div class="col-4">
            <span>Department :</span></div>
          <div class="col-8 form-header">
            <span><%= current_user.department %></span>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="row">
          <div class="col-4">
            <span>Job Title :</span>
          </div>
          <div class="col-8">
            <span class="form-header"><%= current_user.roles.first._type.titleize %></span>
          </div>
        </div>
      </div>
    </div>
<%# debugger %>

    <div class="row">
      <div class="col-3">
        <span>Reporting manager :</span>
      </div>
      <div class="col-9">
        <span><%= current_user.manager.name %></span>
        <%= form.hidden_field :form_id, value: @form.id %>
      </div>
    </div>

    <table class="table table-bordered mt-4 form-table">
      <thead>
      <tr>
        <% @form.data.keys.each do |key| %>
          <% unless ["reporting_manager"].include? key %>
            <th scope="col"> <%= key %> </th>
          <% end %>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <tr>
        <% @form.data.each do |key, value| %>
          <% unless ["reporting_manager"].include? key %>
            <th scope="col">
              <%= form.text_field "data[#{key}]", class: "form-input-field" %>
          <% end %>
        <% end %>
      </tr>
      </tbody>
    </table>

    <div>
      <%= form.submit "Submit", class: "btn-primary" %>
    </div>
  <% end %>
</div>