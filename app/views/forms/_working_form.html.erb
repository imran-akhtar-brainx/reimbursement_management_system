<%= render "shared/forms-list" %>
<% counter = 0 %>
<div class="container mt-5">
  <%= form_with class:"app-container" , url: submissions_path, method: :post do |form| %>
    <div class="row">
      <div class="col-2">
        <%= image_tag "site-logo.png" %>
      </div>
      <div class="col-10 d-flex align-items-center justify-content-start">
        <h1>EMPLOYEE WORKING HOLIDAYS FORM</h1>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-3">
        <span>Employee Name :</span>
      </div>
      <div class="col-9">
        <span><%= current_user.name %></span>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-3">
        <span>Employee ID :</span>
      </div>
      <div class="col-9">
        <span><%= current_user.emp_id %></span>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-6">
        <div class="row">
          <div class="col-4">
            <span>Department :</span></div>
          <div class="col-8 form-header">
            <span><%= current_user.department %></span>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="row">
          <div class="col-4">
            <span>Job Title :</span>
          </div>
          <div class="col-8">
            <span class="form-header"><%= current_user.role.titleize %></span>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <span>Reporting manager :</span>
      </div>
      <div class="col-9">
        <span><%= current_user&.manager&.name %></span>
        <%= form.hidden_field :_type, value: @form._type %>
        <%= form.hidden_field :status, value: 'pending' %>
      </div>
    </div>

    <div class="row">
      <%= form.file_field :images, multiple: true  %>
    </div>

    <table class="table table-bordered mt-4 form-table">
      <thead>
      <tr>
        <% @form.data.keys.each do |key| %>
          <% unless ["reporting_manager"].include? key %>
            <% if @form.id == 2 %>
                <th scope="col" class="bg-secondary"> <%= key.titleize %> </th>
            <% else %>
              <th scope="col" class="bg-secondary"> <%= key.titleize %> </th>
            <% end %>
          <% end %>
        <% end %>
      </tr>
      </thead>
      <tbody id="working-table">
      <tr>
        <% @form.data.each do |key ,value| %>
          <% unless ["reporting_manager"].include? key %>
            <td>
            <%= form.text_field "data[#{counter}][#{key}]", class: "border-none" %></td>
          <% end %>
        <% end %>
      </tr>
      </tbody>
    </table>
    <div>
      <%= form.submit "Submit", class: " btn btn-outline-primary" %>
    </div>
  <% end %>
  <div class="d-flex justify-content-center" data-controller="hello" data-hello-url-value="<%= @form.data.keys %>" data-hello-counter-value="<%= counter %>" data-hello-type-value="<%= @form._type %>">
    <button class="btn btn-outline-primary" data-action="click->hello#createElement" data-target="hello.form">Add Form Row</button>
  </div>
</div>