<%= render "shared/forms-list" %>
<% counter = 0 %>
<div class="container mt-5">
  <%= form_with class: "app-container", url: submissions_path, method: :post do |form| %>
    <div class="row">
      <div class="col-3">
      </div>
      <div class="col-6 d-flex justify-content-center">
        <%= image_tag "site-logo.png", class: "rounded float-start" %>
      </div>
      <div class="col-3"></div>
    </div>
    <div class="row mt-3">
      <span class="d-flex justify-content-center">BrainX Technologies</span>
    </div>

    <div class="row mt-3">
      <h2 class="d-flex justify-content-center">Medical Claim Reimbursement Form</h2>
    </div>

    <div class="d-flex mt-5">
      <div class="col-6">
        <div class="d-flex">
          <div class="col-4">
            <span>Employee Name:</span>
          </div>
          <div class="col-8">
            <span><%= current_user.name %></span>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="d-flex">
          <div class="col-4">
            <span>Job Title: </span>
          </div>
          <div class="col-8">
            <span><%= current_user.role.titleize %></span>
          </div>
        </div>
      </div>
    </div>

    <div class="d-flex mt-4">
      <div class="col-6">
        <div class="d-flex">
          <div class="col-4">
            <span>Employee ID :</span></div>
          <div class="col-8 form-header">
            <span><%= current_user.emp_id %></span>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="d-flex">
          <div class="col-4">
            <span>Name of Patient :</span>
          </div>
          <div class="col-8">
            <span class="form-header"><%= form.text_field "data[name_of_patient]", required: true %></span>
          </div>
        </div>
      </div>
    </div>

    <div class="d-flex">
      <div class="col-3">
        <span>Relationship with Employee :</span>
      </div>
      <div class="col-9">
        <span><%= form.text_field "data[relationship_with_employee]", required: true %></span>
        <%= form.hidden_field :form_id, value: @form.id %>
      </div>
    </div>

    <div class="d-flex">
      <%= form.file_field :images, multiple: true %>
    </div>

    <table class="table table-bordered mt-4 form-table">
      <thead>
      <tr>
        <% @form.data.keys.each do |key| %>
          <% unless ["relationship_with_employee", "name_of_patient", "text", "date", "signature", "total"].include? key %>
            <th scope="col" class="bg-secondary"> <%= key.titleize %> </th>
          <% end %>
        <% end %>
      </tr>
      </thead>
      <tbody id="medical-table">
      <tr>
        <% @form.data.each do |key, value| %>
          <% unless ["relationship_with_employee", "name_of_patient", "text", "date", "signature", "total"].include? key %>
            <td>
              <%= form.text_field "data[#{counter}][#{key}]", class: "border-none", type: "#{key == "amount" ? 'number' : 'text'}", required: true %></td>
          <% end %>
        <% end %>
      </tr>
      </tbody>
    </table>
    <div class="d-flex justify-content-end" data-controller="table" data-table-row-value="<%= @form.data.keys %>" data-table-counter-value="<%= counter %>" data-table-type-value="<%= @form._type %>">
      <button type="button" class="btn btn-outline-primary" data-action="click->table#createElement" data-target="table.form">Add
        Form Row
      </button>
    </div>
    <div class="d-flex justify-content-center">
      <%= form.submit "Submit", class: " btn btn-outline-primary btn-lg" %>
    </div>
  <% end %>
</div>`