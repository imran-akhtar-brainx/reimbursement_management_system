<div class="d-flex justify-content-end mb-5" data-controller="date-picker">
  <%= form_with class: "app-container", url: filtered_submissions_path, method: :get do |f| %>
    <%= f.text_field "reportrange", class: "pull-right", style: "background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 7F0%" do %>
      <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>&nbsp;
      <span></span> <b class="caret"></b>
    <% end %>
    <%= f.hidden_field :_type, value: @form._type %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <span><%= f.submit "Submit" %> </span>
  <% end %>
</div>