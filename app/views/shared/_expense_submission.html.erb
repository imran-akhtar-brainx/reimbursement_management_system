<div class="container d-flex justify-content-center mt-5">
  <h1>Submission Details</h1>
</div>
<div class="container mt-2 app-container">
  <div class="row">
    <div class="col-6">
      <div class="row">
        <div class="col-4">
          <%= image_tag "site-logo.png" %>
        </div>
        <div class="col-8 d-flex align-items-center">
          <h3>Expense Claim Form</h3>
        </div>
      </div>
    </div>
    <div class="col-6 d-flex align-items-center justify-content-end mt-5">
      <span>BrainX technologies</span>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-6">
      <div class="row">
        <div class="col-4">
          <span>Employee Name:</span>
        </div>
        <div class="col-8">
          <span><%= @user.name %></span>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="row">
        <div class="col-4">
          <span>Job Title: </span>
        </div>
        <div class="col-8">
          <span><%= @user.role.titleize %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-6">
      <div class="row">
        <div class="col-4">
          <span>Employee ID :</span></div>
        <div class="col-8 form-header">
          <span><%= @user.emp_id %></span>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="row">
        <div class="col-4">
          <span>Department :</span>
        </div>
        <div class="col-8">
          <span class="form-header"><%= @user.department %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-6">
      <span>Project Name :</span>
      <span class="form-header"><%= @submission.data['project_name'] %></span>
    </div>
    <div class="col-6">
    </div>
  </div>

  <table class="table table-bordered mt-4 form-table">
    <thead>
    <tr>
      <% @form.data.keys.each do |key| %>
        <% unless ["project_name"].include? key %>
          <th scope="col" class="bg-secondary"> <%= key.titleize %> </th>
        <% end %>
      <% end %>
    </tr>
    </thead>
    <tbody id="expense-table">
    <% @submission.data.except('project_name').each do |keys, values| %>
      <tr>
        <% values.each do |key, value| %>
          <td><%= value %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% if @active_role == "accountants" && @user.role != "accountant" %>
    <div class="d-flex justify-content-center">
      <%= link_to 'Excel', user_submissions_accountants_path(format: :xlsx, user_id: params[:user_id], _type: params[:_type], form_id: params[:form_id], submission_id: @submission.id), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
