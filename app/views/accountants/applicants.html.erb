<div class="container app-container">
  <table class="table table-bordered table-hover mt-4 form-table">
    <thead>
    <tr>
      <th scope="col" class="bg-secondary"> Employee ID </th>
      <th scope="col" class="bg-secondary"> Employee Name </th>
      <th scope="col" class="bg-secondary">Total</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr onclick="location.href='<%= employee_submissions_accountants_path(id: user.id, format: :html) %>'">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.total_generator(user.submissions) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>