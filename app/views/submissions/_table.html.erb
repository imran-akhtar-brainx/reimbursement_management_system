<table class="table mt-4 form-table table-hover mt-5">
  <thead>
  <tr>
    <th scope="col" class="bg-secondary">User Name</th>
    <th scope="col" class="bg-secondary">Form Type</th>
    <th scope="col" class="bg-secondary">Creation Date</th>
    <th scope="col" class="bg-secondary">Status</th>
    <th scope="col" class="bg-secondary">Amount</th>
  </tr>
  </thead>
  <tbody>
  <% @submissions.each do |submission| %>
    <tr onclick="location.href='<%= submission_path(submission.id) %>'">
      <td><%= submission.user.name.titleize %></td>
      <td><%= submission.form._type.titleize %></td>
      <td><%= submission.created_at.strftime("%Y-%m-%d") %></td>
      <td><%= submission.status %></td>
      <td><%= submission.total %></td>
    </tr>
  <% end %>
  </tbody>
</table>