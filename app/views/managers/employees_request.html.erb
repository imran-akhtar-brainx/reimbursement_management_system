<div class="container">
  <% @users.each do |user| %>
    <div class="row d-flex mt-3">
      <div class="col-4">
        <%= user.name %>
      </div>

      <div class="col-4">
        <%= user.pending_submissions(user.id).count %>
      </div>

      <div class="col-4">
        <button class="btn btn-primary">
          <%= link_to "Check Out", show_request_manager_path(id: user.id), class: "btn btn-primary" %>
        </button>
      </div>
    </div>
  <% end %>
</div>