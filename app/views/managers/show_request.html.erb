<% @submissions.each do |submission| %>
  <div class="container">
    <% if submission.pending? %>
    <div class="row mt-3">
        <div class="col-1">
          <%= submission.user_id %>
        </div>
        <div class="col-7">
          <%= submission.data %>
        </div>

        <div class="col-2">

        </div>

        <div class="col-2">
          <div class="row">
            <div class="col-6">
              <%= link_to "Approve", set_status_manager_path(user_id: @user_id, status: "approved", submission: submission ), data: { turbo_method: "post" }, class: "btn btn-primary" %>
            </div>
            <div  class="col-6">
              <%= link_to "Reject", set_status_manager_path(user_id: @user_id, status: "rejected", submission: submission ), data: { turbo_method: "post" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>


  </div>

  </div>
<% end %>